<%= link_to 'Logout', logout_path, method: :delete %>
<h2>My Links</h2><br>
<hr>

<div class="container">
  <div class="col-md-6">
    <%= form_for @link do |f| %>
      <%= f.text_field :title, placeholder: 'title' %><br>
      <%= f.text_field :url, placeholder: 'url' %><br>
      <%= f.submit 'Add Link', id: 'link-submit', class: 'btn btn-default' %>
    <% end %>
  </div>
</div>

<br>

<div class='links-list'>
  <% @links.each do |link| %>
    <%= render partial: 'show', locals: {link: link} %>
  <% end %>
</div>