<div class="container">
  <div class="col-md-6">
    <%= form_for @link do |f| %>
      <%= f.text_field :title, placeholder: 'title' %><br>
      <%= f.text_field :url, placeholder: 'url' %><br>
      <%= f.submit 'Submit', id: 'link-submit', class: 'btn btn-default' %>
    <% end %>
  </div>
</div>